<div class="signup-form">
  <h2 class="signup-title">Create account</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="signup-field">
      <%= f.text_field :name, autofocus: true, class: "signup-form-control", placeholder: "First name" %>
    </div>

    <div class="signup-field">
      <%= f.text_field :last_name, autofocus: true, class: "signup-form-control", placeholder: "Last name" %>
    </div>

    <div class="signup-field">
      <%= f.email_field :email, autofocus: true, class: "signup-form-control", placeholder: "Email" %>
    </div>

    <div class="signup-field">
      <%# <% if @minimum_password_length %>
      <%# <em>(<%= @minimum_password_length characters minimum)</em> %>
      <%# <% end<br /> %>
      <%= f.password_field :password, class: "signup-form-control", placeholder: "Password" %>
    </div>

    <div class="signup-field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup-form-control", placeholder: "Confirm Password" %>
    </div>

    <div class="signup-container">
      <div class="actions">
        <%= f.submit "Create", class: "create-button" %>
      </div>
    </div>
  <% end %>
</div>



