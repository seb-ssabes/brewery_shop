<div class="login-form">
  <h2 class="login-title">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false } }) do |f| %>
    <div class="login-field" id="email-field">
      <%= f.email_field :email, autofocus: true, class: "login-form-control", placeholder: "Email" %>
    </div>

    <div class="login-field">
      <%= f.password_field :password, class: "login-form-control", placeholder: "Password" %>
    </div>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "pass-forgot" %>

    <div class="signin-container">
      <div class="actions">
        <%= f.submit "Sign in", class: "signin-button" %>
      </div>
      <%= link_to "Create Account", new_registration_path(resource_name), class: "signup-link" %>
    </div>
  <% end %>
</div>
